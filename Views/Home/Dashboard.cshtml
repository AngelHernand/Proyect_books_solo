@{
    Layout = null;
    ViewData["Title"] = "BookWisdom | Tu portal de lectura";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6C63FF;
            --secondary-color: #F5B041;
            --text-color: #333;
            --bg-color: #f8f9fa;
            --card-bg: #ffffff;
            --sidebar-bg: #ffffff;
            --shadow-color: rgba(0, 0, 0, 0.1);
            --hover-color: #f0f0f0;
        }

        [data-theme="dark"] {
            --primary-color: #9d96ff;
            --secondary-color: #FFD166;
            --text-color: #e1e1e1;
            --bg-color: #121212;
            --card-bg: #1e1e1e;
            --sidebar-bg: #1e1e1e;
            --shadow-color: rgba(0, 0, 0, 0.3);
            --hover-color: #2d2d2d;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s ease;
            overflow-x: hidden;
        }

        .dashboard-container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 260px;
            background-color: var(--sidebar-bg);
            box-shadow: 2px 0 10px var(--shadow-color);
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .sidebar-sticky {
            position: sticky;
            top: 0;
            height: 100vh;
            padding-top: 1rem;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--primary-color);
        }

        .sidebar-item {
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            color: var(--text-color);
            text-decoration: none;
            border-radius: 8px;
            margin: 0.25rem 1rem;
            transition: all 0.3s ease;
        }

        .sidebar-item:hover, .sidebar-item.active {
            background-color: var(--hover-color);
            color: var(--primary-color);
        }

        .sidebar-item i {
            margin-right: 0.75rem;
            font-size: 1.2rem;
            width: 24px;
        }

        .content {
            flex: 1;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .navbar {
            background-color: var(--card-bg);
            box-shadow: 0 2px 10px var(--shadow-color);
            margin-bottom: 1.5rem;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
        }

        .search-form {
            position: relative;
            width: 100%;
            max-width: 500px;
        }

        .search-form input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.75rem;
            border-radius: 50px;
            border: 1px solid rgba(0,0,0,0.1);
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s ease;
        }

        .search-form input:focus {
            box-shadow: 0 0 0 0.2rem rgba(108, 99, 255, 0.25);
            border-color: var(--primary-color);
        }

        .search-form i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
        }

        .theme-toggle, .profile-btn {
            color: var(--text-color);
            background: none;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 0.5rem;
            transition: all 0.3s ease;
            border-radius: 50%;
        }

        .theme-toggle:hover, .profile-btn:hover {
            background-color: var(--hover-color);
        }

        .profile-btn {
            display: flex;
            align-items: center;
            border-radius: 50px;
            padding: 0.25rem 0.75rem;
            gap: 0.5rem;
        }

        .profile-image {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-color);
        }

        .card {
            background-color: var(--card-bg);
            border: none;
            box-shadow: 0 4px 12px var(--shadow-color);
            border-radius: 12px;
            transition: all 0.3s ease;
            margin-bottom: 1.5rem;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px var(--shadow-color);
        }

        .card-title {
            font-weight: 600;
            color: var(--primary-color);
        }

        .book-cover {
            height: 250px;
            object-fit: cover;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .book-card:hover .book-cover {
            transform: scale(1.05);
        }

        .category-badge {
            background-color: var(--primary-color);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.8rem;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            display: inline-block;
        }

        .rating i {
            color: var(--secondary-color);
        }

        .section-title {
            position: relative;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .section-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background-color: var(--primary-color);
            border-radius: 50px;
        }

        .footer {
            padding: 1.5rem 0;
            text-align: center;
            color: var(--text-color);
            font-size: 0.9rem;
        }
        .profile-image {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--primary-color);
}
        /* Responsive adjustments */
       
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-sticky">
                <div class="sidebar-header">
                    <div class="logo">
                        <i class="fas fa-book"></i>
                        <span class="logo-text">VyR Book</span>
                    </div>
                </div>
                
                <div class="nav flex-column">
                    <a href="#" class="sidebar-item active">
                        <i class="fas fa-home"></i>
                        <span>Inicio</span>
                    </a>
                    <a href="#" class="sidebar-item">
                        <i class="fas fa-compass"></i>
                        <span>Sorprendeme</span>
                    </a>
                 
                    <a href="#" class="sidebar-item">
                        <i class="fas fa-list"></i>
                        <span>Categorías</span>
                    </a>
                    <a href="/User/EditProfile" class="sidebar-item">
                        <i class="fas fa-cog"></i>
                        <span>Configuración</span>
                    </a>

  <!-- Opción extra para administradores -->
            @if ((bool)ViewData["IsAdmin"])
            {
                <a href="/Admin/Users" class="sidebar-item">
                    <i class="fas fa-users"></i>
                    <span>Ver Usuarios</span>
                </a>
            }

                    <a href="/User/Logout" class="sidebar-item">
    <i class="fas fa-sign-out-alt"></i>
    <span>Salir</span>
</a>
                </div>
            </div>
        </aside>

        <!-- Main content -->
        <main class="content">
            <!-- Top navbar -->
            <div class="navbar">
                <div class="d-flex justify-content-between align-items-center w-100 navbar-content">
                    <form class="search-form" id="search-form">
                        <input type="text" id="search-query" placeholder="Buscar libros de toda índole" aria-label="Buscar">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>
                    <div class="d-flex align-items-center">
                         <button id="theme-toggle" class="theme-toggle me-3"></button>
                        <div class="profile-info d-flex align-items-center">
                            <span class="me-2">Bienvenido, <strong>@ViewData["Username"]</strong></span>
                            <span class="badge bg-primary">@ViewData["Role"]</span>
                            @if (!string.IsNullOrEmpty(ViewData["ProfileImage"]?.ToString()))
                            {
                                <img src="@ViewData["ProfileImage"]" alt="Foto de perfil" class="profile-image ms-3" />
                            }
                            else
                            {
                                <i class="fas fa-user-circle text-secondary ms-3" style="font-size: 36px;"></i>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Welcome message -->
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h2 class="card-title">¡Bienvenido de nuevo, @ViewData["Username"]!</h2>
                                    <p class="card-text">Continúa donde lo dejaste o descubre nuevas recomendaciones basadas en tus gustos.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recommendations section -->
           

            <!-- Popular Categories Section -->
            <h4 class="section-title mt-4">Categorías populares</h4>
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-dragon text-primary" style="font-size: 2rem;"></i>
                            <div class="ms-3">
                                <h5 class="card-title">Fantasía</h5>
                                <p class="card-text mb-0">Mundos imaginarios y aventuras épicas</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-robot text-primary" style="font-size: 2rem;"></i>
                            <div class="ms-3">
                                <h5 class="card-title">Ciencia Ficción</h5>
                                <p class="card-text mb-0">Tecnología, futuro y mundos alternativos</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex align-items-center">
                            <i class="fas fa-heartbeat text-primary" style="font-size: 2rem;"></i>
                            <div class="ms-3">
                                <h5 class="card-title">Romance</h5>
                                <p class="card-text mb-0">Historias de amor y relaciones</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="search-results" class="row mt-4"></div>

            <!-- Footer -->
            <footer class="footer">
                <div class="container">
                    <p class="mb-0">© 2023 BookWisdom. Todos los derechos reservados.</p>
                </div>
            </footer>
        </main>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script>
        // Dark mode toggle functionality
        const themeToggle = document.getElementById('theme-toggle');
        const htmlElement = document.documentElement;
        
        // Check for saved theme preference or use preferred color scheme
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
            htmlElement.setAttribute('data-theme', savedTheme);
            updateThemeIcon(savedTheme);
        } else {
            const prefersDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (prefersDarkMode) {
                htmlElement.setAttribute('data-theme', 'dark');
                updateThemeIcon('dark');
            }
        }
        
        // Toggle theme
        themeToggle.addEventListener('click', () => {
            const currentTheme = htmlElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            htmlElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        });
        
        function updateThemeIcon(theme) {
            if (theme === 'dark') {
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            } else {
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            }
        }

        document.getElementById('search-form').addEventListener('submit', async function (e) {
            e.preventDefault();
            const query = document.getElementById('search-query').value;

            if (!query.trim()) {
                alert('Por favor, ingresa un término de búsqueda.');
                return;
            }

            const response = await fetch(`/SearchBooks?query=${encodeURIComponent(query)}`);
            const data = await response.json();
            console.log(data);

            const resultsContainer = document.getElementById('search-results');
            resultsContainer.innerHTML = '';

            if (data.success && data.books.length > 0) {
                
                data.books.forEach(book => {
                    console.log(book);
                    const bookCard = `
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card book-card h-100">
                                <img src="${book.coverUrl}" class="card-img-top book-cover" alt="${book.title}">
                                <div class="card-body">
                                    <h5 class="card-title">${book.title}</h5>
                                    <p class="card-text text-muted">${book.author || 'Autor desconocido'}</p>
                                </div>
                            </div>
                        </div>`;
                    resultsContainer.innerHTML += bookCard;
                });
            } else {
                resultsContainer.innerHTML = '<p class="text-muted">No se encontraron resultados.</p>';
            }
        });
    </script>
</body>
</html>
