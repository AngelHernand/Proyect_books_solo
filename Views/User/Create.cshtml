@model Proyect_Solo_Recommendation.Models.User

@{
    Layout = null;
    ViewData["Title"] = "Crear Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Book World</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #5b2c6f;
            --primary-dark: #1c2833;
            --text-dark: #333;
            --text-light: #777;
            --bg-gradient: linear-gradient(135deg, #ffd8c7, #1c2833);
            --white: #fff;
            --shadow-sm: 0 2px 10px rgba(0,0,0,0.05);
            --shadow-md: 0 5px 15px rgba(0,0,0,0.07);
            --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
            --radius-sm: 8px;
            --radius-md: 15px;
            --radius-lg: 30px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', sans-serif;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background: var(--bg-gradient);
            color: var(--text-dark);
        }

        /* Header */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.25rem 10%;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: var(--primary);
            font-weight: 700;
            font-size: 1.5rem;
            transition: transform 0.3s ease;
        }

            .logo:hover {
                transform: scale(1.05);
            }

            .logo i {
                margin-right: 0.5rem;
                font-size: 1.8rem;
            }

        .nav-link {
            text-decoration: none;
            margin-left: 1rem;
            padding: 0.75rem 1.5rem;
            border-radius: var(--radius-lg);
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
        }

            .nav-link.primary {
                color: var(--white);
                background: var(--primary);
                box-shadow: 0 4px 12px rgba(255, 111, 97, 0.3);
            }

                .nav-link.primary:hover {
                    background: var(--primary-dark);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 15px rgba(255, 111, 97, 0.4);
                }

            .nav-link i {
                margin-right: 0.5rem;
            }

        /* Main Content */
        main {
            flex-grow: 1;
            padding: 3rem 1.5rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Form Styles */
        .form-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-lg);
            padding: 2.5rem;
            width: 100%;
            max-width: 580px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .form-container:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
            }

            .form-container::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 6px;
                background: var(--primary);
            }

        .form-title {
            text-align: center;
            color: var(--primary);
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .form-subtitle {
            text-align: center;
            color: var(--text-light);
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
                color: var(--text-dark);
                font-size: 0.95rem;
            }

        .input-icon-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            transition: color 0.3s;
        }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 2.75rem;
            border: 2px solid #eaeaea;
            border-radius: var(--radius-sm);
            font-size: 1rem;
            transition: all 0.3s;
            background: var(--white);
        }

            .form-control:focus {
                border-color: var(--primary);
                outline: none;
                box-shadow: 0 0 0 3px rgba(255, 111, 97, 0.15);
            }

                .form-control:focus + .input-icon {
                    color: var(--primary);
                }

            .form-control.file-input {
                padding: 0.75rem 1rem;
                background: #f9f9f9;
                cursor: pointer;
            }

        .validation-message {
            display: block;
            color: #e74c3c;
            margin-top: 0.375rem;
            font-size: 0.85rem;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
            border: none;
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: var(--radius-lg);
            cursor: pointer;
            width: 100%;
            margin-top: 1rem;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(255, 111, 97, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                box-shadow: 0 6px 15px rgba(255, 111, 97, 0.4);
                transform: translateY(-2px);
            }

            .btn-primary i {
                margin-right: 0.625rem;
                font-size: 1.1rem;
            }

        .form-divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
            color: var(--text-light);
        }

            .form-divider::before,
            .form-divider::after {
                content: "";
                flex-grow: 1;
                height: 1px;
                background-color: #eaeaea;
            }

            .form-divider span {
                padding: 0 1rem;
                font-size: 0.85rem;
            }

        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #f0f0f0;
            color: var(--text-light);
            font-size: 0.95rem;
        }

        .form-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

            .form-link:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

        .back-link {
            display: inline-flex;
            align-items: center;
            text-decoration: none;
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.95rem;
            margin-top: 1.5rem;
            transition: color 0.3s, transform 0.3s;
        }

            .back-link:hover {
                color: var(--primary);
                transform: translateX(-5px);
            }

            .back-link i {
                margin-right: 0.5rem;
            }

        /* Footer */
        footer {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            padding: 1.5rem 10%;
            text-align: center;
            color: var(--text-light);
            font-size: 0.9rem;
            box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.05);
        }

        .footer-content {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }

        .footer-brand {
            font-weight: 600;
            color: var(--primary);
        }

     

        /* Input Focus State Animation */
        .form-control:focus::placeholder {
            transform: translateY(-10px);
            opacity: 0;
            transition: all 0.3s;
        }

        /* File input styling */
        .custom-file-label {
            position: relative;
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            background: #f8f8f8;
            border: 2px dashed #ddd;
            border-radius: var(--radius-sm);
            font-size: 0.95rem;
            color: var(--text-light);
            cursor: pointer;
            transition: all 0.3s;
            overflow: hidden;
        }

            .custom-file-label:hover {
                border-color: var(--primary);
                background: #fff;
                color: var(--primary);
            }

            .custom-file-label i {
                margin-right: 0.75rem;
                font-size: 1.25rem;
            }

        input[type="file"] {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
        }

       

        .form-container {
            animation: fadeIn 0.5s ease-out forwards;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header>
        <a href="/" class="logo">
            <i class="fas fa-book-open"></i>
            Book World
        </a>
        <div>
            <a class="nav-link primary" href="/User/Login">
                <i class="fas fa-sign-in-alt"></i>
                Iniciar Sesión
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <div class="form-container">
            <h2 class="form-title">Únete a Book World</h2>
            <p class="form-subtitle">Crea tu cuenta y descubre un universo de historias</p>

            <form asp-action="Create" asp-controller="User" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Username">Nombre de usuario</label>
                    <div class="input-icon-wrapper">
                        <input class="form-control" asp-for="Username" placeholder="Escoge un nombre único" />
                        <i class="input-icon fas fa-user"></i>
                    </div>
                    <span class="validation-message" asp-validation-for="Username"></span>
                </div>

                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <div class="input-icon-wrapper">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Crea una contraseña segura" />
                        <i class="input-icon fas fa-lock"></i>
                    </div>
                    <span class="validation-message" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label for="Firstname">Nombre</label>
                    <div class="input-icon-wrapper">
                        <input class="form-control" asp-for="Firstname" placeholder="Tu nombre" />
                        <i class="input-icon fas fa-id-card"></i>
                    </div>
                    <span class="validation-message" asp-validation-for="Firstname"></span>
                </div>

                <div class="form-group">
                    <label for="Lastname">Apellido</label>
                    <div class="input-icon-wrapper">
                        <input class="form-control" asp-for="Lastname" placeholder="Tu apellido" />
                        <i class="input-icon fas fa-id-card"></i>
                    </div>
                    <span class="validation-message" asp-validation-for="Lastname"></span>
                </div>

                <div class="form-group">
                    <label for="Description">Descripción</label>
                    <div class="input-icon-wrapper">
                        <input class="form-control" asp-for="Description" placeholder="Cuéntanos sobre ti y tus gustos literarios" />
                        <i class="input-icon fas fa-edit"></i>
                    </div>
                    <span class="validation-message" asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label for="ProfileImage">Imagen de perfil</label>
                    <label class="custom-file-label" for="ProfileImage">
                        <i class="fas fa-upload"></i>
                        <span>Selecciona una imagen</span>
                    </label>
                    <input id="ProfileImage" class="form-control-file" asp-for="ProfileImage" type="file" hidden />
                    <span class="validation-message" asp-validation-for="ProfileImage"></span>
                </div>

                <button class="btn-primary" type="submit">
                    <i class="fas fa-user-plus"></i>
                    Crear cuenta
                </button>

                <div class="form-footer">
                    ¿Ya tienes una cuenta? <a href="/User/Login" class="form-link">Iniciar sesión</a>
                </div>
            </form>

            <div style="text-align: center; margin-top: 1.5rem;">
                <a href="/" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                    Volver a la página principal
                </a>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <p>© 2023 <span class="footer-brand">Book World</span>. Todos los derechos reservados.</p>
        </div>
    </footer>

    <!-- Scripts de validación -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Script para mostrar el nombre del archivo seleccionado en el input de tipo file
        document.getElementById('ProfileImage').addEventListener('change', function(e) {
            // Obtiene el nombre del archivo
            const fileName = e.target.files[0] ? e.target.files[0].name : 'Selecciona una imagen';
            // Actualiza el texto del label
            const label = document.querySelector('.custom-file-label span');
            label.textContent = fileName;
        });
    </script>
</body>
</html>
